<form id="imeiForm" class="space-y-6">
  <div>
    <label for="imei" class="block text-sm font-medium mb-2">IMEI Number</label>
    <input 
      type="text" 
      id="imei" 
      name="imei" 
      class="w-full px-4 py-3 bg-gray-200 text-grey-800 dark:bg-gray-800 dark:text-gray-200 border border-gray-300 outline-none dark:border-grey-700 rounded-lg transition"
      placeholder="Enter 15-digit IMEI" 
      maxlength="15"
      pattern="\d{15}"
      required
      x-data="{ imei: '' }"
      x-model="imei"
      @input="imei = imei.replace(/[^\d]/g, '')"
    >
    <div id="imeiError" class="text-red-500 text-sm mt-2 hidden"></div>
    <p class="text-gray-400 text-sm mt-2">IMEI should be 15 digits long</p>
  </div>
  
  <button 
    type="submit" 
    class="w-full dark:bg-blue-700 bg-blue-500 text-white py-3 px-4 rounded-lg transition font-medium flex items-center justify-center"
    id="submitBtn"
  >
    <span id="btnText">Check IMEI</span>
    <svg id="spinner" class="hidden w-5 h-5 ml-2 animate-spin" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
      <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
      <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
    </svg>
  </button>
</form>